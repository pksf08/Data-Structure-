class Solution {
    public void sortColors(int[] nums) {
        int max = getmax(nums);
        int n=nums.length;
        int[] count = new int[max+1];
        for(int i=0;i<max;i++){
            count[i]=0;
        }
        for(int i=0;i<n;i++){
            count[nums[i]]++;
        }
        for(int j=1;j<=max;j++){
            count[j]=count[j]+count[j-1];
        }
        int[] temp = new int[n];
        for(int j=n-1;j>=0;j--){
            temp[--count[nums[j]]]=nums[j];
        }
        for(int i =0;i<n;i++){
            nums[i] = temp[i];
        }
    }
    public int getmax(int[] a){
        int max = a[0];
        for( int i=1;i<a.length;i++){
            if(a[i]>max)
                max=a[i];
        }
        return max;
    }
}
