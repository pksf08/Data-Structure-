class Solution {
    public int longestOnes(int[] nums, int k) {
        int  count=0,l=0,r=0,n=nums.length,maxlen=0;
        while (r<n){
            if(nums[r]==0)
                count+=1;
            if(count>k){
                if(nums[l]==0)
                    count-=1;
                l+=1;
            }
            if(count<=k)
                maxlen=Math.max(maxlen,r-l+1);
        
            r+=1;
        }
        return maxlen;
    }
}
