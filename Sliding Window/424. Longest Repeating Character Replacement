class Solution {
    public int characterReplacement(String s, int k) {
        int l=0,r=0,maxlen=0,maxi=0;
        int[] hash = new int[26];
        Arrays.fill(hash,0);
        while(r<s.length()){
            hash[s.charAt(r)-'A']++;
         maxi = Math.max(maxi,hash[s.charAt(r)-'A']);
            if((r-l+1)-maxi>k){
               hash[s.charAt(l)-'A']--;

                l+=1;
            }
            if((r-l+1)-maxi <=k)
                maxlen=Math.max(maxlen,r-l+1);
            r+=1;
        }
return maxlen;
    }
}
