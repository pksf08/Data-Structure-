class Solution {
    public boolean isPalindrome(String s) {
        String clean =s.replaceAll("[^a-zA-Z0-9]","").toLowerCase();
        char[] res = clean.toCharArray();
        int left =0;
        int right=res.length-1;
        
        while(left<right){
            char c =res[left];
            res[left] = res[right];
            res[right] =c;
            left++;
            right--;
        }
        String rev= new String(res);
        return clean.equals(rev);
    }
}
