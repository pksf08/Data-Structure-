class Solution {
    public List<Integer> spiralOrder(int[][] matrix) {
        int rowstart=0,rowend=matrix.length;
        int colstart=0,colend=matrix[0].length;
        List<Integer> res = new ArrayList<>();
        while(rowstart<rowend && colstart<colend){
            for(int i=colstart;i<colend;i++){
                res.add(matrix[rowstart][i]);
            }
            rowstart++;
            for(int j=rowstart;j<rowend;j++){
                res.add(matrix[j][colend-1]);
            }
            colend--;
            if(rowstart<rowend){
                for(int k=colend-1;k>=colstart;k--){
                res.add(matrix[rowend-1][k]);
                }
            }
            rowend--;
            if(colstart<colend){
                for(int l =rowend-1;l>=rowstart;l--){
                res.add(matrix[l][colstart]);
                }
            }
            colstart++;
        }
        return res;
    }
}
