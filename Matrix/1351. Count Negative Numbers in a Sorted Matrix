class Solution {
    public int countNegatives(int[][] grid) {
        int count=0;
        int row = grid.length;
        int col = grid[0].length;
        int i=row-1,j=0;
        while(i>=0 && j<col){
            if(grid[i][j]<0){
                count += row-j;
                i--;
            }
            else
                j++;
        }
        // for(i=0;i<grid.length;i++){
        //     for(j=0;j<grid[i].length;j++){
        //         if(grid[i][j]<0)
        //             count++;
        //     }
        // }
        return count;
    }
}
