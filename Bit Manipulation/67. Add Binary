class Solution {
    public String addBinary(String a, String b) {
        int l1=a.length()-1;
        int l2=b.length()-1;
        StringBuffer res = new StringBuffer();
        int carry =0;
        while(l1>=0 && l2>=0){
           carry+= (a.charAt(l1--)-'0') + (b.charAt(l2--)-'0');
           res.append(carry%2);
           carry = carry/2;
        }
        while(l1>=0){
            carry+=(a.charAt(l1--)-'0');
            res.append(carry%2);
            carry = carry/2;
        }
        while(l2>=0){
            carry+=(b.charAt(l2--)-'0');
            res.append(carry%2);
            carry = carry/2;
        }
        if(carry==1)
            res.append(carry);
        return res.reverse().toString();
    }
}
