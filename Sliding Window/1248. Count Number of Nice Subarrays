class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        return oddeven(nums,k)-oddeven(nums,k-1);
    }
    private int oddeven(int[] nums, int k){
        if(k<0) return 0;
        int l=0,r=0,sum=0,count=0;
        while(r<nums.length){
            sum+=(nums[r]%2);
            while(sum>k){
                sum-=(nums[l++]%2);
            }
            count+=(r-l+1);
            r+=1;
        }
        return count;
    }
}
