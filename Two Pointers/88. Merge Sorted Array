class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        int i =m-1;
        int j =n-1;
        int k=m+n-1;
    
        int[] arr = new int[m+n];
        while(i>=0 && j>=0){
          if(nums1[i]>nums2[j]){
              arr[k] = nums1[i];
              i--;
              k--;
          }  
          else{
              arr[k] = nums2[j];
              j--;
              k--;
          }
        }
        while(i>=0){
            arr[k] = nums1[i];
              i--;
              k--;
        }
        while(j>=0){
            arr[k] = nums2[j];
              j--;
              k--;
        }
        for(int t=0;t<m+n;t++){
            nums1[t]=arr[t];
        }
    }
}
