class Solution {
    public boolean isPerfectSquare(int num) {
        if(num == 1) return true;
        int left=1,mid;
        int right =num/2;
        while(left<=right){
            mid = left+(right-left)/2;
            long val = (long) mid*mid;
            if(val == num)
                return true;
            else if(val<num)
                left=mid+1;
            else
                right=mid-1;
        }
        return false;
    }
}
